{
  "name": "patron-css-dev",
  "version": "1.0.0",
  "description": "Patron CSS Framework",
  "main": "dist/patron-style.js",
  "scripts": {
    "start": "parcel index.html -d output --port 8000",
    "build": "npm run clean && parcel build js/index.js -o patron --no-source-maps ",
    "clean": "rimraf dist"
  },
  "author": "HCL Products & Platforms",
  "license": "ISC",
  "dependencies": {
    "parcel": "^1.12.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "delegate": "^3.2.0",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "sass": "^1.22.10"
  },
  "browserslist": [
    "> .1%",
    "not IE <= 12"
  ],
  "stylelint": {
    "rules": {
      "color-no-invalid-hex": true,
      "selector-type-case": "lower",
      "string-quotes": "single",
      "selector-pseudo-element-colon-notation": "double",
      "unit-blacklist": [
        "em"
      ]
    }
  }
}
