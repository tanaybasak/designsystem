{
  "name": "patron-css-dev",
  "version": "1.0.18",
  "description": "Patron CSS Framework",
  "main": "dist/patron-style.js",
  "scripts": {
    "start": "parcel index.html -d output --port 8000",
    "build": "parcel build index.html -d dist && node defaultBundleName.js --global patron --no-source-maps",
    "stylelint": "stylelint '**/*.scss'; exit 0"
  },
  "author": "HCL Products & Platforms",
  "license": "ISC",
  "dependencies": {
    "parcel": "^1.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "autoprefixer": "^9.4.10",
    "delegate": "^3.2.0",
    "parcel-bundler": "^1.11.0",
    "postcss-cli": "^6.1.2",
    "sass": "^1.17.3",
    "stylelint": "^10.1.0"
  },
  "browserslist": [
    "> .1%",
    "not IE <= 12"
  ],
  "stylelint": {
    "rules": {
      "color-no-invalid-hex": true,
      "selector-type-case": "lower",
      "string-quotes": "single",
      "selector-pseudo-element-colon-notation": "double",
      "unit-blacklist": [
        "em"
      ],
      "block-no-empty": true,
      "unit-no-unknown": true,
      "comment-no-empty": true,
      "value-no-vendor-prefix": true,
      "function-calc-no-invalid": true,
      "no-descending-specificity": true,
      "no-duplicate-at-import-rules": true,
      "no-duplicate-selectors": true,
      "number-leading-zero": "never",
      "number-no-trailing-zeros": true,
      "length-zero-no-unit": true
    }
  }
}
