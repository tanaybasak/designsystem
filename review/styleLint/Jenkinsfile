pipeline {
    agent any
    environment {
        GITHUB_STATUS_URL = "https://9b947fb028b139f35f93a9e3e296f9b90ce27356:x-oauth-basic@github01.hclpnp.com/api/v3/repos/UXUIAssets/patron-css-dev/statuses"
        STATUS_NAME = "ci-stylelint/jenkins"
    }
    tools {nodejs "nodejs-path"}
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run stylelint'
            }
        }
    }
    post {
        failure {
            echo "${GIT_COMMIT}"
            echo "${JOB_NAME}"
            echo "${BUILD_NUMBER}"
            echo "${JENKINS_URL}"
            echo "${BUILD_URL}"
            echo "${JOB_URL}"
            echo "${GITHUB_STATUS_URL}"
            echo "${STATUS_NAME}"
            sh label: '', script: '''curl "https://9b947fb028b139f35f93a9e3e296f9b90ce27356:x-oauth-basic@github01.hclpnp.com/api/v3/repos/UXUIAssets/patron-css-dev/statuses/$GIT_COMMIT" \\
  -H "Content-Type: application/json" \\
  -X POST \\
  -d "{\\"state\\": \\"failure\\",\\"context\\": \\"ci-stylelint/jenkins\\", \\"description\\": \\"Jenkins\\", \\"target_url\\": \\"http://10.115.95.40:8080/job/$JOB_NAME/$BUILD_NUMBER/console\\"}"'''
        }
        success {
            echo "${GIT_COMMIT}"
            echo "${JOB_NAME}"
            echo "${BUILD_NUMBER}"
            echo "${JENKINS_URL}"
            echo "${BUILD_URL}"
            echo "${JOB_URL}"
            echo "${GITHUB_STATUS_URL}"
            echo "${STATUS_NAME}"
            sh label: '', script: '''curl "https://9b947fb028b139f35f93a9e3e296f9b90ce27356:x-oauth-basic@github01.hclpnp.com/api/v3/repos/UXUIAssets/patron-css-dev/statuses/$GIT_COMMIT" \\
  -H "Content-Type: application/json" \\
  -X POST \\
  -d "{\\"state\\": \\"success\\",\\"context\\": \\"ci-stylelint/jenkins\\", \\"description\\": \\"Jenkins\\", \\"target_url\\": \\"http://10.115.95.40:8080/job/$JOB_NAME/$BUILD_NUMBER/console\\"}"'''
        }
    }
}
